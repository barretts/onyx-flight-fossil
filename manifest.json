{
  "manifest_version": 3,
  "name": "LLM API Chat Deluxe",
  "version": "0.4",
  "description": "A deluxe floating chat widget with streaming markdown and syntax-highlighted code blocks.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://api.lmstudio.ai/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/marked.min.js", "libs/highlight.min.js", "dist/content.js"],
      "css": ["libs/highlight.css"]
    }
  ],
  "action": {
    "default_title": "LLM API Chat Deluxe"
  }
}
